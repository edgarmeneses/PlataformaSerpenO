        <mapping resource="com/serpen/persistence/map/Account.hbm.xml"/>
        <mapping resource="com/serpen/persistence/map/Credit.hbm.xml"/>
        <mapping resource="com/serpen/persistence/map/FinancialEntity.hbm.xml"/>
        <mapping resource="com/serpen/persistence/map/PaymentPlan.hbm.xml"/>
