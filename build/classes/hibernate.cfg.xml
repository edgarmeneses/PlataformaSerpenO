        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <mapping resource="com/serpen/persistence/map/Conection.hbm.xml"/>
        <mapping resource="com/serpen/persistence/map/Entity.hbm.xml"/>
